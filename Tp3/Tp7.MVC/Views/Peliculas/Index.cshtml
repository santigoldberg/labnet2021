@model List<Tp7.MVC.Models.PeliculasView>

@{
    ViewBag.Title = "Peliculas Page";
}

<h1>Lista de Películas</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID Película</th>
            <th scope="col">Nombre </th>
                

        </tr>
    </thead>
    <tbody>

        @foreach (var pelicula in Model)
        {
        <tr>
            <th scope="row">@pelicula.Id</th>
            <td>@pelicula.OriginalTitle</td>
            
            
        </tr>

        }
    </tbody>   
</table>

